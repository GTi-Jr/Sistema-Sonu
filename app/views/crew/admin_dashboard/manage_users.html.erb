<section class="content-header">
   <h1>
      users
      <small>Equipe</small>
   </h1>
</section>
<!-- Main content -->
<section class="content">
   <!-- <section class="box"> -->
   <div class="row">
      <div class="col-xs-12">
         <div class="box">
            <div class="box-header">
               <h3 class="box-title">Gerenciamento de usu√°rios</h3>
            </div>
            <div class="box-header with-border">
               <%= link_to "Cadastar Novo user", new_user_registration_path, class:"btn btn-info" %>
               <div class="box-tools pull-right">
                  <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
               </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
               <table id="table_ecej" class="table table-bordered table-hover responsive">
                  <thead>
                     <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th class="noExport">Editar</th>
                     </tr>
                  </thead>
                  <tbody>
                     <% if !@users.nil? %>
                     <% @users.each do |user| %>
                     <tr>
                        <%#<td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td>
                           <%= link_to edit_user_registration_path(user) do %>
                           <small class="btn btn-default dropdown-toggle btn-xs">
                           <i class="fa fa-pencil-square-o"></i> Editar
                           </small>
                           <% end %>
                           <%= link_to cancel_user_registration_path(user), method: :delete, data: { confirm: "Deseja realmente apagar o useristrador #{user.email}" } do %>
                           <small class="btn btn-danger dropdown-toggle btn-xs">
                           <i class="fa fa-pencil-square-o"></i> Excluir
                           </small>
                           <% end %>
                        </td>
                     </tr>
                     <% end %>
                     <% end %>
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
   <!-- </section> -->
</section>
