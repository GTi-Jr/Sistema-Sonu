<section class="content-header">
    <h1>
      Editar Cadastro
    <small></small>
    </h1>
</section>
 <%= form_for @user, url: { action: "update" }, method: :put do |f| %>

<%#  method: :patch %>


 <!-- Main content -->

    <section class="content">

      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Opções</h3>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
          </div>
        </div>

      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Dados Pessoais</h3>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Nome Completo</label>
                <%= f.text_field :name, :id => 'name', placeholder: 'Nome completo', class: 'form-control'%>
              </div>
              <!-- /.form-group -->
              <div class="form-group">
                <label>CPF</label>
                <%= f.text_field :cpf, :id => 'cpf', placeholder: 'CPF', class: 'form-control'%>
              </div>
              <!-- /.form-group -->
            </div>
            <!-- /.col -->
            <div class="col-md-6">
              <div class="form-group">
                <label>RG</label>
                <%= f.text_field :rg, :id => 'rg', placeholder: 'rg', class: 'form-control'%>
              </div>
              <!-- /.form-group -->
              <div class="form-group">
                <label>Data de Nascimento</label>
                <div class="input-group date">
                  <div class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                  </div>
                  <%= f.text_field :birthdate , :id => 'birthday_picker', placeholder: 'Data de nascimento', class: 'form-control'%>
                </div>
              </div>
              <!-- /.form-group -->
            </div>
            <!-- /.col -->
            <div class="">
              <div class="form-group col-md-6">
                <label>Gênero</label>
                <%= f.select(:gender,['Masculino', 'Feminino', 'Prefiro não declarar'], {}, { :class => 'form-control select2' }) %>
              </div>
              <!-- /.form-group -->

              <!-- /.form-group -->
            </div>
            <div class="col-md-12">
              <div class="form-group">
               <label>Necessidades especiais</label>
                 <%#<%= f.text_area :special_needs, :id => 'special_needs', :class => 'form-control',:length => '120' %>
              </div>

            </div>
          </div>
          <!-- /.row -->
        </div>
        <!-- /.box-body -->

      </div>
      <!-- /.box -->

      <div class="box  box-info">
        <div class="box-header with-border">
      </div>
      <!-- /.box -->

      <div class="box box-default">
        <div class="box-header with-border">
          <h3 class="box-title">ENDEREÇO</h3>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
          </div>
        </div>

        <!-- /.box-header -->
        <div class="box-body">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>CEP</label>
                <%= f.text_field :cep, placeholder: "CEP", id:"postal_code", class: 'form-control'%>
              </div>
              <!-- /.form-group -->
              <div class="form-group">
                <label>CIDADE</label>
                <%= f.text_field :city, placeholder: "Cidade", id:"city", class: 'form-control'%>
              </div>
              <!-- /.form-group -->
            </div>
            <!-- /.col -->
            <div class="col-md-6">
              <!-- /.form-group -->
              <div class="form-group">
                <label>ENDEREÇO</label>
                <%= f.text_field :address, placeholder: "Rua", id:"street", class: 'form-control'%>
              </div>
              <!-- /.form-group -->
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
        </div>
        <!-- /.box-body -->

      </div>
      <!-- /.box -->

      <div class="box box-danger">
        <div class="box-header with-border">
          <h3 class="box-title">CONTATO</h3>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
          </div>
        </div>

        <!-- /.box-header -->
        <div class="box-body">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Telefone</label>
                <%= f.text_field :phone, placeholder: "Número Fixo.", id:"phone", class: 'form-control phone'%>
              </div>
              <!-- /.form-group -->
            </div>
          </div>
          <!-- /.row -->
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Celular</label>
                <%= f.text_field :cel, placeholder: "Número de celular", id:"phone", class: 'form-control phone'%>
              </div>
              <!-- /.form-group -->

            </div>

          </div>
          <!-- /.row -->
        </div>
        <!-- /.box-body -->

      </div>
      <!-- /.box -->


      <div class="box box-success">
        <div class="box-header with-border">
          <div class="actions">
            <%= f.submit "Update" %>
          </div>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
          </div>
        </div>



      </div>
      <!-- /.box -->


    </section>

         <% end %>
