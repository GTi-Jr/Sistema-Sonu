<h2>Sign up</h2>

<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <%# Colocar um IF abaixo para caso o email fornecido
  e o email de confirmação sejam diferentes  %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
      <%= f.label :email_confirmation %><br />
      <%= f.email_field :email, autofocus: true %>
  </div>

  <%# Colocar um IF acima para caso o email fornecido
  e o email de confirmação sejam diferentes  %>


  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :rg_number %><br />
    <%= f.text_field :rg, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :cpf_number %><br />
    <%= f.text_field :cpf, autofocus: true %>
  </div>
<%#
  <div class="field"><%= f.check_box :is_female, {}, true   <%= f.label :is_female, "Female" %
  </div>

  <div class="field"><%= f.check_box :is_female, {}, false %
     <%= f.label :is_female, "Male" %
  </div>
%>
  <div class="field"><%= f.label :birthdate %><br />
    <%= f.date_select :birthdate %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :address_number %><br />
    <%= f.text_field :address_number %>
  </div>

  <div class="field">
    <%= f.label :address_complement %><br />
    <%= f.text_field :address_complement %>
  </div>

  <div class="field">
    <%= f.label :bairro %><br />
    <%= f.text_field :neighborhood %>
  </div>

  <div class="field">
    <%= f.label :cidade %><br />
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :telefone %><br />
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :celular %><br />
    <%= f.text_field :cel %>
  </div>

  <div class="field">
    <%= f.label :instituição_de_ensino %><br />
    <%= f.text_field :educational_institution %>
  </div>

  <div class="field">
    <%= f.label :matricula %><br />
    <%= f.text_field :registration_number %>
  </div>

  <div class="field">
    <%= f.label :semestre %><br />
    <%= f.text_field :semester %>
  </div>

  <div class="field">
    <%= f.label :link_perfil_facebook %><br />
    <%= f.text_field :fb_link %>
  </div>



  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
